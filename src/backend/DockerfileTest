FROM mcr.microsoft.com/dotnet/sdk:7.0 AS base

WORKDIR /app

FROM mcr.microsoft.com/dotnet/sdk:7.0 AS publish

WORKDIR /app

COPY ["src/backend/.", "."]

RUN dotnet restore

COPY . .

RUN dotnet publish "C:\app\AuthService\AuthService.csproj" -c Release -o "C:\app\publish\"

FROM publish AS test

WORKDIR /app

ENTRYPOINT ["dotnet", "test"]
